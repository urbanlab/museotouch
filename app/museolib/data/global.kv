<QuitButton>:
	size:1200,1200
	size_hint: None,None
	pos_hint:{'right': 1, 'top': 1}
	scale: .2
	source: 'quit.png'
	
	canvas.before:
		Color:
			rgb: (0.224, 0.016, 0.271,1)
		Rectangle:
			pos: self.center_x - 300, self.center_y - 300
			size: 600,600
	# Image:
	# 	size_hint: None, None
	# 	source: 'quit.png'
	# 	# background_down: 'quit.png'
	# 	size: 1200, 1200

<ExpoItem>:
	size_hint: None,None
	height: Window.width/9
	width: self.height
	# orientation: 'vertical'
	# spacing: 0
	# padding: 0
	# on_touch_down: ctx.selector.select_expo(ctx) if self.collide_point(*args[1].pos) else None
	# on_press: self.on_press()
	# on_release: self.launch_expo()

	canvas:
		Color:
			rgba: (1,1,1,1) if root.expo.get('no_img', '') else (0,0,0,0)
		Rectangle:
			pos: self.center_x - 75, self.center_y - 75
			size: 150,150


	Image:
		id: main_img
		pos:root.pos
		source: root.expo.get('data', '')
		size_hint: None, None
		size: root.width, root.height
		allow_stretch: True
		keep_ratio: False
		center: root.center
		color: (1,1,1,1)
	Label:
		id:main_label
		text: root.expo.get('name', '').upper()
		size_hint: None,None
		text_size: self.width, None
		size: root.width - 20, self.texture_size[1]
		halign: 'left'
		valign: 'bottom'
		markup: True
		font_name: futuraBold
		pos: root.x + 10, root.y + 10
		opacity:0
		on_touch_up:self.opacity=0
		
		canvas.before:
			Color:
				rgba: root.color
			Rectangle:
				pos: main_img.pos
				size: main_img.width, main_img.height
<ExpoPopupChoice>:
	list_expos: list_expos
	orientation: 'vertical'
	size_hint: None, None
	size: Window.size
	canvas:
		Color: 
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size

	GridLayout:
		id: list_expos
		size_hint: None, None
		# height: self.minimum_height
		# height: 700
		width: Window.width
		cols: 8
		spacing: 15
		padding: 15

